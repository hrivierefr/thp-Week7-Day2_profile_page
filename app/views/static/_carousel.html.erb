<h4>
	Voici les derniers gossips postés sur le réseau :
</h4>

<div>
<% @last_gossips.each_with_index do |g, i|%>
		<div class="carousel-inner">
			<% if i == 0 %>
			<div class="carousel-item active">
		<% else %>
			<div class="carousel-item">
		<% end %>
			<div class="card text-center d-block w-100">
					<div class="card-header">Rumeur n°<%= g.id %></div>
				<div class="card-body">
		    		<p class="card-text"> <%= g.content %> </p>
	  			</div>
  			    <div class="card-footer blockquote-footer text-muted">
			        Postée il y <%= ((Time.now - g.created_at)/(3600*24)).to_i %> jours<% if g.author != nil %>, par <%= g.author.name %><% end %>
		        </div>
			</div>
		</div>
	</div>
<% end %>
</div>